FROM centos:7
  
# Install necessary packages
RUN yum install -y epel-release
RUN yum install -y centos-release-scl
RUN yum install -y rh-python36
RUN scl enable rh-python36 bash
RUN yum install -y python36-setuptools
#RUN yum install -y python-pip
RUN easy_install-3.6 pip
RUN pip3 install --upgrade pip
RUN yum install -y opencv-python
  
RUN pip3 install pillow flask-socketio eventlet 
RUN pip3 install sklearn 
RUN pip3 install --ignore-installed  scipy
#RUN pip3 install pillow
RUN pip3 install opencv-python
RUN yum install -y libXext libSM libXrender

# Copy the current directory contents into the container at /app
RUN scl enable rh-python36 bash
RUN mkdir /app
RUN mkdir /log
#COPY sample_bot3.py /app/sample_bot.py
  
# Set the working directory to /app
WORKDIR /app
ADD . /app
# Run sample_bot.py when the container launches, you should replace it with your program
ENTRYPOINT ["python3.6", "freescale.share.py"]
